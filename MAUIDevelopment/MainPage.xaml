<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIDevelopment.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="CounterBtn"
                Text="Lista bez viewmodela"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="List2Btn"
                Text="Lista sa viewmodelom"
                Clicked="List2Btn_Clicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="List2DX"
                Text="Lista sa viewmodelom DevExpress"
                Clicked="List2DX_Clicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="List2DXGrid"
                Text="Grid sa viewmodelom DevExpress"
                Clicked="List2DXGrid_Clicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
